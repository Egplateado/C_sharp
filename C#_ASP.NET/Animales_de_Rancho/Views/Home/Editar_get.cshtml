@using Entity_animales
@model EntityAnimales
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar_get</title>
    <!-- Campo hidden fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&display=swap" rel="stylesheet">
    <!--Campo de estilos-->
    <link href="~/Styles/Editar_get.css" rel="stylesheet" />
</head>
<body>
    <header>
        <h1>Editar un Animal del rancho</h1>
    </header>
    <div> 
        @using(Html.BeginForm())
            {
            <table>
                <thead>
                <tr>
                <th>Nombre</th>
                <th>Tipo</th>
                <th>Color</th>
                <th>Edad</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                <td>@Html.TextBox("Nombre", Model.Nombre)</td>
                <td>@Html.TextBox("Tipo", Model.Tipo)</td>
                <td>@Html.TextBox("Color", Model.Color)</td>
                <td>@Html.TextBox("Edad", Model.Edad)</td>
                <td>@Html.Hidden("Id" , Model.Id)</td>
                </tr
>               </tbody>
            </table>
            <input type="submit"  value="Enviar" formaction="/Home/Editar_post" />
            }
    </div>
</body>
</html>
